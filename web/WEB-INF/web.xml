        <servlet-name>SaveBookServlet</servlet-name>
        <url-pattern>/servlet/SaveBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PrintBookServlet</servlet-name>
        <servlet-class>servlet.PrintBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintBookServlet</servlet-name>
        <url-pattern>/servlet/PrintBookServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>GetAllBooksServlet</servlet-name>
