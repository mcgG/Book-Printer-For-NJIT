        <servlet-class>servlet.ValidLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidLoginServlet</servlet-name>
        <url-pattern>/servlet/ValidLoginServlet</url-pattern>
    </servlet-mapping>

